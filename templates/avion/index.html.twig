{% extends 'base.html.twig' %}

{% block title %}Avion index{% endblock %}

{% block body %}
    <h1>Avion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Modele</th>
                <th>Capacite</th>
                <th>En service</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for avion in avions %}
            <tr>
                <td>{{ avion.id }}</td>
                <td>{{ avion.modele }}</td>
                <td>{{ avion.capacite }}</td>
                <td>{{ avion.enService ? 'Oui' : 'Non' }}</td>
                <td>
                    <a href="{{ path('app_avion_show', {'id': avion.id}) }}">show</a>
                    <a href="{{ path('app_avion_edit', {'id': avion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_avion_new') }}">Create new</a>
{% endblock %}
